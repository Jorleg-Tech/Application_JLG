<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/card_backgrouned"
        android:textColor="#FFFFFF"
        android:text="Comment s'appelle le père de la patrie/nation Haïtienne ?"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_below="@id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:textColor="#000000"
        android:visibility="invisible"
        android:text="Jean Jacques Dessalines"
        android:textSize="40sp" />

</RelativeLayout>